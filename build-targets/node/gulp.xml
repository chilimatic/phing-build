<?xml version="1.0"?>
<project name="node.gulp" default="node.gulp.trigger" basedir="." description="This is a taskfile for composer tasks">
    <property name="pathToGulpBinary" value="node_modules/.bin/gulp" />
    <property name="passthru" value="false" />

    <target name="node.gulp.trigger">
        <exec passthru="${passthru}" command="${pathToGulpBinary} ${gulpTarget}" />
    </target>

</project>