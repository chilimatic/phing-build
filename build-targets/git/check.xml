<?xml version="1.0"?>
<project name="check" default="git.check" basedir="." description="This is the automatic build file for the social network.">
    <!-- properties -->
    <property name="pathToGitDir" value=".git" />

    <!-- checks if its a git repository -->
    <target name="git.check">
        <property name="outputValue" value="" override="yes" />
        <if>
            <available property="outputValue" file='${pathToGitDir}' type='dir' />
            <then>
                <echo message="this is a git repository" />
            </then>
            <else>
                <echo message="this is not a git repository! Panic! ;P" />
                <fail />
            </else>
        </if>
    </target>

</project>